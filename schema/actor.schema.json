{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gherrick0918.github.io/solo5e/schema/actor.schema.json",
  "title": "Actor",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "abilities": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "str": { "type": "integer", "minimum": 1, "maximum": 30 },
        "dex": { "type": "integer", "minimum": 1, "maximum": 30 },
        "con": { "type": "integer", "minimum": 1, "maximum": 30 },
        "int": { "type": "integer", "minimum": 1, "maximum": 30 },
        "wis": { "type": "integer", "minimum": 1, "maximum": 30 },
        "cha": { "type": "integer", "minimum": 1, "maximum": 30 }
      },
      "required": ["str", "dex", "con", "int", "wis", "cha"]
    },
    "proficiency_bonus": { "type": "integer", "minimum": 0, "maximum": 10 },
    "save_proficiencies": {
      "type": "array",
      "items": { "$ref": "#/$defs/ability" },
      "uniqueItems": true
    },
    "skill_proficiencies": {
      "type": "array",
      "items": { "$ref": "#/$defs/skill" },
      "uniqueItems": true
    }
  },
  "required": ["abilities", "proficiency_bonus", "save_proficiencies", "skill_proficiencies"],
  "$defs": {
    "ability": {
      "type": "string",
      "enum": ["str", "dex", "con", "int", "wis", "cha"]
    },
    "skill": {
      "type": "string",
      "enum": [
        "athletics",
        "acrobatics", "sleight_of_hand", "stealth",
        "arcana", "history", "investigation", "nature", "religion",
        "animal_handling", "insight", "medicine", "perception", "survival",
        "deception", "intimidation", "performance", "persuasion"
      ]
    }
  }
}
